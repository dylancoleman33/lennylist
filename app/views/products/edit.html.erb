<h1>Edit Product</h1>

<%= form_for @product do |f| %>
<%= f.text_field :title, placeholder: "Name" %>
<br>

<%= f.text_field :price, placeholder: "Price" %>
<br>

<%= f.text_area :description, placeholder: "Description" %>

<br>
<%= f.label :product_pic, 'Product Picture:' %>
<%= f.file_field :product_pic, placeholder: "Picture" %>

<%= f.submit %>


<% end %>
